@model ChangePasswordDTO

@{
	ViewData["Title"] = "Cambiar contraseña";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Cambiar contraseña</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">

        <div class="card-body">
            <h5 class="card-title text.primary">Editar Usuario</h5>

            <form asp-action="ChangePassword" method="POST" class="row g-3" enctype='multipart/form-data'>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="@Html.DisplayFor(dto => dto.CurrentPassword)" />
                            <label asp-for="CurrentPassword"></label>
                            <span asp-validation-for="CurrentPassword" class="text-warning"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="@Html.DisplayFor(dto => dto.NewPassword)" />
                            <label asp-for="NewPassword"></label>
                            <span asp-validation-for="NewPassword" class="text-warning"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mt-2">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@Html.DisplayFor(dto => dto.ConfirmPassword)" />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                        </div>
                    </div>

                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>

    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

