@model RecoveryPasswordDTO

@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active">Recuperar contraseña</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">

        <div class="card-body">
            <h5 class="card-title text.primary">Editar Usuario</h5>

            <form asp-action="RecoveryPassword" method="POST" class="row g-3">

                <div class="row">

                    <div class="col-md-12 mt-2">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <a asp-action="Login" class="btn btn-secondary">Iniciar sesión</a>
                </div>
            </form>

        </div>

    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
