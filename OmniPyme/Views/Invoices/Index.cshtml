@model PaginationResponse<InvoiceDTO>
@{
	ViewData["Title"] = "Clientes";
}

<div class="pagetitle">
	<h1>Clientes</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
			<li class="breadcrumb-item active">Facturas</li>
		</ol>
	</nav>
</div><!-- End Page Title -->

<section class="section dashboard">

	<div class="card">
		<div class="card-header">
			<div class="row">
				<h3 class="card-title col-md-11">Facturas</h3>
				<div class="col-md-1">
					<a asp-action="Create" class="btn btn-primary"><i class="bi bi-file-earmark-spreadsheet"></i>+</a>
				</div>

			</div>
		</div>
		<div class="card-body">

			<form asp-action="Index" class="navbar-search" method="get">
				<input type="hidden" name="Page" value="@Model.CurrentPage" />

				<div class="row mt-3">
					<div class="col-md-auto">

						<select name="RecordsPerPage" class="form-select bg-light border-0 small" asp-for="RecordsPerPage">
							<option value="2" selected="@(Model.RecordsPerPage == 2)">2</option>
							<option value="10" selected="@(Model.RecordsPerPage == 10)">10</option>
							<option value="15" selected="@(Model.RecordsPerPage == 15)">15</option>
							<option value="30" selected="@(Model.RecordsPerPage == 30)">30</option>
							<option value="50" selected="@(Model.RecordsPerPage == 50)">50</option>
						</select>
					</div>

					<div class="col-md-10">
						<div class="input-group-mb-3">
							<input type="text"
								   class="form-control bg-light border-0 small"
								   placeholder="Buscar..."
								   aria-label="search"
								   asp-for="Filter">
						</div>
					</div>

					<div class="col-md-auto">
						<div class="input-group-mb-3">
							<button class="btn btn-primary"><i class="bi bi-search"></i></button>
						</div>
					</div>

				</div>
			</form>

			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>ID</th>
							<th>Factura N.</th>
							<th>Fecha de factura</th>
							<th>Total</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (InvoiceDTO item in Model.List)
						{
							<tr>
								<td>@item.Id</td>
								<td>@item.InvoiceNumber</td>
								<td>@item.InvoiceDate</td>
								<td>@item.Sale.SaleTotal</td>

								<td>
									<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-fill"></i></a>
									<form asp-action="Delete" asp-route-id="@item.Id" style="display: contents;" method="post">
										<button class="btn btn-danger btn-sm btnDelete"><i class="bi bi-trash-fill"></i></button>
									</form>
								</td>
							</tr>
						}
					</tbody>
				</table>
				@await Html.PartialAsync("_PaginationComponent", Model)
			</div>
		</div>

</section>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('.btnDelete').click(function (event) {

				event.preventDefault();

				Swal.fire({
					title: '¿Estas seguro?',
					text: "¡No podrás revertir esto!",
					icon: 'warning',
					showCancelButton: true,
					confirmButtonColor: '#3085d6',
					cancelButtonColor: '#d33',
					confirmButtonText: '¡Sí, bórralo!'
				}).then((result) => {
					if (result.isConfirmed) {
						const form = $(this).closest('form')
						form.submit();
					}
				})
			});
		});
	</script>
}
